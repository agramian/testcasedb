<%= remotipart_response do %>
  $('#no_uploads').remove(); 
  $('#upload_upload').val("");
  $('#upload_description').val("");
  
  var newRow =  '<tr class="even upload_<%= @upload.id %>"><td width=420><%= generate_link_with_thumbnail(@upload) %></td>';
  newRow += '<td><%= @upload.description %></td>';
  <% if @upload.test_case_id != nil %>
    newRow += '<td class="executable"><%= File.executable?(@upload.upload.path) ? "Yes" : "No" %></td>';
    <% if can? :execute, Upload %>
	    newRow += '<td><%= link_to "Make Executable", make_upload_executable_path(@upload), :remote => true %></td>';
  	<% end %>
  <% end %>
	<% if can? :destroy, Upload %>
	  newRow += '<td><%= link_to "<i class=icon-trash></i>".html_safe, @upload, :confirm => "This will permanently delete the file. Are you sure?", :method => :delete, :remote => true %></td>';
	<% end %>
  newRow += '</tr>';
  $('#uploadsTable').append(newRow);
  reset_row_classes();
  
  $('#ajaxAlert').hide();
<% end %>

